<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            id: camera
            resolution: (840, 500)
            play: False
        Button:
            id: camera_btn
            text: 'Play'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            text: 'Capture'
            on_press: root.capture()


<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: picture
        Button:
            text: 'Create a link to share the picture'
            on_press: root.create_link()
        Label:
            id: link
            text: ''
        GridLayout:
            cols: 2
            Button:
                text: 'Copy the Link'
            Button:
                text: 'Open the Link'



<RootWidget>
    CameraScreen
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'