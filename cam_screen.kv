<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            id: camera
            resolution: (840, 500)
            play: False
        Button:
            id: camera_btn
            text: 'Play'
            on_press:
                root.start() \
                if root.ids.camera.play == False \
                else root.stop()
        Button:
            text: 'Capture'
            on_press: root.capture()


<RootWidget>
    CameraScreen
        id: camera_screen
        name: 'camera_screen'
