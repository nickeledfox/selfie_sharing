<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 12
        spacing: 15
        Camera:
            id: camera
            resolution: (1200, 900)
            play: False
            size_hint_y: .7
            opacity: 0
        Button:
            id: camera_btn
            text: 'Play'
            background_color: 0.4, 0.5, 0.6, 1
            on_press:
                root.start() \
                if root.ids.camera.play == False \
                else root.stop()
            size_hint_y: .1
        Button:
            text: 'Capture'
            background_color: 0.4, 0.5, 0.6, 1
            on_press: root.capture()
            size_hint_y: .1


<RootWidget>
    CameraScreen
        id: camera_screen
        name: 'camera_screen'
