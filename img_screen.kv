<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: picture
        Button:
            text: 'Create a link to share the picture'
            on_press: root.create_link()
        Label:
            id: link
            text: ''
        GridLayout:
            cols: 2
            Button:
                text: 'Copy the Link'
                on_press: root.copy_link()
            Button:
                text: 'Open the Link'
                on_press: root.open_link()


<RootWidget>
    ImageScreen:
        id: image_screen
        name: 'image_screen'