<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: picture
            size_hint_y: .7
        Button:
            text: 'Create a link to share the picture'
            background_color: 0.4, 0.5, 0.6, 1
            on_press: root.create_link()
            size_hint_y: .1
        Label:
            id: link
            text: ''
            size_hint_y: .1
        GridLayout:
            cols: 2
            size_hint_y: .1
            padding: 10
            spacing: 15
            Button:
                text: 'Copy the Link'
                on_press: root.copy_link()
                background_color: 0.4, 0.5, 0.6, 1
            Button:
                text: 'Open the Link'
                on_press: root.open_link()
                background_color: 0.4, 0.5, 0.6, 1


<RootWidget>
    ImageScreen:
        id: image_screen
        name: 'image_screen'